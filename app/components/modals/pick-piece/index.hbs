<Modal @isOpen={{true}} as |m|>
  <m.Header>Pick A Piece</m.Header>

  <m.Body class='flex flex-col gap-4'>
    <p>Choose one of the pieces below.</p>

    <div class='flex gap-4'>
      <button type='button' {{on 'click' (fn @onSelect 'n')}}>
        <Piece @type='n' @color='b' />
      </button>

      <button type='button' {{on 'click' (fn @onSelect 'b')}}>
        <Piece @type='b' @color='b' />
      </button>

      <button type='button' {{on 'click' (fn @onSelect 'p')}}>
        <Piece @type='p' @color='b' />
      </button>

      <button type='button' {{on 'click' (fn @onSelect 'r')}}>
        <Piece @type='r' @color='b' />
      </button>
    </div>
  </m.Body>

  <m.Footer class='flex justify-start'>
    <Button @appearance='minimal' {{on 'click' @onCancel}}>
      Cancel
    </Button>
  </m.Footer>
</Modal>